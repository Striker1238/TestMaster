<Page x:Class="TestMaster.Views.ResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestMaster.Views"
      mc:Ignorable="d" 
      Title="TestMaster" Height="600" Width="900"
      Background="{DynamicResource BaseWhite}">

    <DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0" Margin="10">
                <TextBlock Text="Тест проходил:" FontWeight="Bold" Margin="0,0,0,20"/>
                <TextBlock x:Name="FullNameTextBox" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock x:Name="PersonnelNumberTextBox" FontSize="16" Margin="0,0,0,20"/>
                <TextBlock Text="Информация по тесту:" FontWeight="Bold" Margin="0,0,0,20"/>
                <TextBlock x:Name="TestTitleTextBox"  FontSize="16" Margin="0,0,0,10"/>
                <TextBlock x:Name="TestDescriptionTextBox" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock x:Name="TestCategoryTextBox"  FontSize="16" Margin="0,0,0,10"/>
                <TextBlock x:Name="TestCountQuestionsTextBox"  FontSize="16" Margin="0,0,0,10"/>

                <TextBlock Text="Результаты:" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="TestCountCorrectAnswerTextBox"  FontSize="16" Margin="0,0,0,10"/>
                <TextBlock x:Name="TestPrecentTextBox" FontSize="16" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding }" Margin="0,0,0,20">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10">

            </StackPanel>
            <StackPanel Grid.Row ="1" Grid.ColumnSpan="2" 
                        VerticalAlignment="Center" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button Content="Закрыть" Height="30" Width="150" FontSize="15"
                    Command="{Binding CloseCommand}"
                    Style="{DynamicResource AccentButton}"
                    Margin="0,0,10,0"/>

                <Button Content="Экспортировать" Height="30" Width="150" FontSize="15"
                        Style="{DynamicResource AccentButton}"/>
            </StackPanel>
        </Grid>

    </DockPanel>
</Page>
