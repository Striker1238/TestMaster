<Page x:Class="TestMaster.Views.ResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestMaster.Views"
      mc:Ignorable="d" 
      Title="TestMaster" Height="600" Width="900"
      Background="{DynamicResource BaseWhite}">

    <DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0" Margin="10">
                <Border BorderBrush="#DDDDDD" BorderThickness="2" Margin="0,1,0,1">
                    <StackPanel>
                        <TextBlock Text="Персональные данные" 
                           FontWeight="Bold" 
                           FontSize="20" 
                           Margin="5,0,0,5"/>

                        <!-- Блок фио -->
                        <StackPanel VerticalAlignment="Center" Margin="10,0,0,10">
                            <TextBlock Text="ФИО: " FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="FullNameTextBox" FontSize="16" Margin="0,10,0,0"/>
                        </StackPanel>

                        <!-- Блок табельный номер -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,20">
                            <TextBlock Text="Табельный номер: " FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="PersonnelNumberTextBox" FontSize="16" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border BorderBrush="#DDDDDD" BorderThickness="2" Margin="0,1,0,1">
                    <StackPanel>
                        <!-- Блок информация о тесте -->
                        <TextBlock Text="Информация о тесте" 
                           FontWeight="Bold" 
                           FontSize="20" 
                           Margin="5,0,0,5"/>

                        <!-- Блок название теста -->
                        <StackPanel Margin="10,0,0,10">
                            <TextBlock Text="Название теста:" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="TestTitleTextBox" FontSize="14" Margin="0,0,0,0" TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Блок описания -->
                        <StackPanel Margin="10,0,0,10">
                            <TextBlock Text="Описание:" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="TestDescriptionTextBox" FontSize="14" Margin="0,0,0,0"/>
                        </StackPanel>

                        <!-- Блок категория -->
                        <StackPanel Orientation="Horizontal" Margin="10,0,0,10">
                            <TextBlock Text="Категория теста:" FontSize="14" FontWeight="Bold" Margin="0,0,0,0"/>
                            <TextBlock x:Name="TestCategoryTextBox"  FontSize="14" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Результаты:" FontWeight="Bold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" >
                    <TextBlock x:Name="TestCountQuestionsTextBox"  FontSize="16" Margin="10,0,10,0"/>
                    <TextBlock Text="|"/>
                    <TextBlock x:Name="TestCountCorrectAnswerTextBox"  FontSize="16" Margin="10,0,10,0"/>
                    <TextBlock Text="|"/>
                    <TextBlock x:Name="TestPrecentTextBox" FontSize="16" Margin="10,0,10,0"/>
                </StackPanel>

                <ListBox ItemsSource="{Binding result.ComplatedTest.Questions}" Margin="0,0,0,20">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            
            <StackPanel Grid.Row ="1" Grid.ColumnSpan="2" 
                        VerticalAlignment="Top" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button Content="Закрыть" Height="30" Width="150" FontSize="15"
                    Command="{Binding CloseCommand}"
                    Style="{DynamicResource AccentButton}"
                    Margin="0,0,10,0"/>

                <Button Content="Экспортировать" Height="30" Width="150" FontSize="15"
                        Command="{Binding ExportCommand}"
                        Style="{DynamicResource AccentButton}"/>
            </StackPanel>
        </Grid>

    </DockPanel>
</Page>
